{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "declaration": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "noImplicitAny": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "**/test/*",
    "**/coverage/*",
    "**/node_modules/*",
    "**/cjs/*",
    "**/esm/*",
    "**/*.test.ts",
    "**/*.test.tsx",
  ],
}
